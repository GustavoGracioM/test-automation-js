{
  "name": "test-automation-js",
  "version": "1.0.0",
  "scripts": {
    "test": "cucumber-js tests/features --require tests/steps --require tests/support",
    "test:json": "cucumber-js --format json:reports/cucumber-report.json tests/features --require tests/steps --require tests/support",
    "test:report": "npm run test:json && node ./scripts/generate-html-report.js && node ./scripts/convert-json-to-junit.js"
  },
  "devDependencies": {
    "@cucumber/cucumber": "^10.0.0",
    "chai": "^5.1.0",
    "chromedriver": "^143.0.0",
    "cucumber-html-reporter": "^5.5.1",
    "cucumber-junit": "^1.7.1",
    "selenium-webdriver": "^4.39.0",
    "webdriver-manager": "^12.1.9"
  }
}
